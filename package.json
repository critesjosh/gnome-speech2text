{
  "name": "gnome-speech2text",
  "version": "1.0.0",
  "description": "GNOME Shell extension for speech-to-text functionality using OpenAI Whisper",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:js": "jest tests/js",
    "test:python": "cd src && python -m pytest ../tests/python",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/js/**/*.test.js",
      "**/tests/integration/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/whisper_typing.py"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testRunner": "jest-jasmine2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "jest-jasmine2": "^30.0.4"
  }
}
